<div class="leadership">
  {% if site.leadership != blank %}
    {% assign leadership_size = site.leadership | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and leadership_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign leadership = site.leadership | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign leadership_limit = site.announcements.limit %}
        {% else %}
          {% assign leadership_limit = leadership_size %}
        {% endif %}
        {% for item in leadership limit: leadership_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%m, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="leadership-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No leadership History so far...</p>
  {% endif %}
</div>
