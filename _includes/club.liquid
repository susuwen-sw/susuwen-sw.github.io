<div class="club">
  {%site.club%}
  {% if site.club != blank %}
    {% assign club_size = site.club | size %}
    <div
      class="table-responsive"
      {% if include.limit and site.announcements.scrollable and club_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign club = site.club | reverse %}
        {% if include.limit and site.announcements.limit %}
          {% assign club_limit = site.announcements.limit %}
        {% else %}
          {% assign club_limit = club_size %}
        {% endif %}
        {% for item in club limit: club_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%m, %Y' }}</th>
            <td>
              {% if item.inline %}
                {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
              {% else %}
                <a class="club-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No club History so far...</p>
  {% endif %}
</div>
